/*###变量声明###*/
/* 导航菜单字体颜色 */
$menu-font-color = #fff;
$primaryMenu-font-color = #fff;
$primaryMenu-selected-font-color = #00a0e9;
$secondMenu-enable-font-color = #333;
$secondMenu-disable-font-color = #7d7d7d;
$secondMenu-hover-font-color = #00a0e9;
$thirdMenu-default-font-color = #666;
$thirdMenu-hover-font-color = #00a0e9;

/* 导航菜单背景色 */
$menu-background-color = #00A0E9;
$primaryMenu-hover-background-color = #21b9ff;
$primaryMenu-selected-background-color = #fafafa;
$secondMenu-background-color = #fff;
$secondMenuItem-background-color = #fafafa;
$thirdMenu-background-color = #ffffff;

/* 菜单边线颜色 */
$menu-border-bottom-color = #00a0e9;
$primaryMenu-border-color = #00a0e9;
$secondMenu-border-bottom-color = #ceefff;
$thirdMenu-border-bottom-color = #ceefff;

/* 菜单按钮颜色*/
$btn-icon-default-color = #fff;
$btn-icon-hover-color = #fff;
$btn-icon-disable-color = #00afff;
$btn-default-background-color = #00a0e9;
$btn-hover-background-color = #21b9ff;
$btn-disable-background-color = #00a0e9;

/*菜单样式*/
.clearfix:after {
  content:"020";
  display: block;
  height: 0;
  clear:both;
  visibility: hidden;
}
.clearfix { zoom: 1; }

/* 字体 */
.menu-wrap {
  font-family:"Microsoft YaHei", "黑体", "宋体", "sans-serif";
  font-weight: bold;
}
.menu a {
  font-size: 14px;
}
/**
* 菜单样式文件
*/
.menu-wrap {
  position: relative;
  background-color: $menu-background-color;
}
.menu-btn {
  display: none;
  width: 26px;
  height: 35px;
  line-height: 35px;
  text-align: center;
  background-color: $btn-default-background-color;
  color: $btn-icon-default-color;
}
.menu-btn:hover {
  color: $btn-icon-hover-color;
  background-color: $btn-hover-background-color;
}
.menu-btn-left {
  float: left;
}
.menu-btn-right {
  float: right;
}
.menu {
  position: absolute;
  left: 26px;
  right: 26px;
  overflow: hidden;
  height: 35px;
}
/* 一级菜单样式 */
.menu-primary {
  position: absolute;
}
.menu-primary-item {
  float: left;
}
.menu-primary-item-a {
  display: inline-block;
  /*max-width: 106px;*/
  padding-left: 20px;
  padding-right: 20px;
  height: 35px;
  text-align: center;
  line-height: 35px;
  color: $primaryMenu-font-color;
}

.menu-primary-item-a:hover {
  color: $primaryMenu-font-color;
  background: $primaryMenu-hover-background-color;
  cursor: pointer;
}

.menu-primary-item-a.active {
  border-left: 1px solid $primaryMenu-border-color;
  border-right: 1px solid $primaryMenu-border-color;
  padding-left: 19px;
  padding-right: 19px;
  color: $primaryMenu-selected-font-color;
  cursor: text;
  background-color: $primaryMenu-selected-background-color;
}

/* 二级菜单样式 */
.menu-second-box {
  position: absolute;
  top: 35px;
  z-index: 100;
  border: 1px solid $primaryMenu-border-color;
  border-top: none;
}

.box-overflow-hidden {
  overflow: hidden;
  padding-top: 28px;
}

.menu-second-box .button-up {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  z-index: 100;
  margin: 0 auto;
  height: 28px;
  border-bottom: 1px solid $secondMenu-border-bottom-color;
  text-align: center;
  color: $btn-icon-default-color;
  background: $btn-default-background-color;
}

.menu-second-box .button-down {
  position: absolute;
  left: 0;
  right: 0;
  top: 380px;
  z-index: 100;
  margin: 0 auto;
  height: 28px;
  border-top: 1px solid $secondMenu-border-bottom-color;
  text-align: center;
  color: $btn-icon-default-color;
  background: $btn-default-background-color;
}

.position-right {
  right: 0;
}

.position-left {
  left: 0;
}

.button-up span,.button-down span {
  color: $btn-icon-default-color;
}

.button-up span.disabled,.button-down span.disabled {
  color: $btn-icon-disable-color;
}

.menu-second {
  background: $secondMenu-background-color;
}

.nav-second-over {
  position: absolute;
  top: 29px;
}

.menu-second-item {
  font-size: 14px;
  font-weight: normal
}

.menu-second-item-a {
  display: block;
  float: left;
  padding-left: 13px;

  /*test*/
  padding-right: 10px;

  line-height: 30px;
  border-top: 1px solid #C7F0FF;
  background-color: $secondMenuItem-background-color;

  color: $secondMenu-disable-font-color;
  white-space: nowrap;
}

.menu-second-item-a:hover {
  cursor: text;
  color: $secondMenu-hover-font-color;
}

.menu-second .menu-second-item:first-child .menu-second-item-a {
  padding-top: 10px;
  border-top: none;
}

/* 三级菜单样式 */
.menu-third {
  float: left;
  margin-left: 4px;
  padding-left: 10px;
  border-top: 1px solid #C7F0FF;
  background-color: $thirdMenu-background-color;
}

.menu-third:empty {
  height: 30px;
}

.menu-second-item:first-child .menu-third {
  padding-top: 10px;
  border-top: none;
}

.menu-third-item {
  float: left;
}

.menu-third-item-a {
  display: block;
  width: 150px;
  height: 30px;
  line-height: 30px;
  font-size: 12px;
  color: $thirdMenu-default-font-color;
  /*超出隐藏*/
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.menu-third-item-a:hover {
  cursor: pointer;
  color: $thirdMenu-hover-font-color;
}

.menu-third-item-a.has-border {
  border-bottom: 1px dashed $thirdMenu-border-bottom-color;
}

/*叶子导航项*/
.end-nav-item-a {
  color: $secondMenu-enable-font-color;
}

.end-nav-item-a:hover {
  cursor: pointer;
  color: $thirdMenu-hover-font-color;
}